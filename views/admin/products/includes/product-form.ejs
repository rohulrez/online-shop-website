<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
    <p>
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="<%= product.title %>">
    </p>
    <div id="image-upload-control">
        <p>
            <label for="image">Image</label>
            <input type="file"  id="image" name="image" accept="image/png, image/jpeg" <% if(imageRequired) { %> required <% } %>>
        </p>
        <img src="" alt="Selected image.">
    </div>
    
    <p>
        <label for="summary">Summary</label>
        <input type="text" id="summary" name="summary" maxlength="250" value="<%= product.summary %>">
    </p>
    <p>
        <label for="price">Price</label>
        <input type="number" id="price" name="price" min="0.01" step="0.01" value="<%= product.price %>">
    </p>
    <p>
        <label for="description">Description</label>
        <textarea name="description" id="description" rows="8" required><%= product.description %></textarea>
    </p>
    <p>
        <button class="btn btn-alt" type="reset">Reset</button>
        <button class="btn" type="submit">Save</button>
    </p>

</form>