<article class="product-item">
    <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
    <div class="product-item-content">
        <h2><%= product.title %></h2>
        <div id="product-item-actions">
            <% if (locals.isAdmin) { %>
            <a class="btn btn-alt" href="/admin/products/<%= product.id %>">View & Edit</a>
            <button class="btn btn-alt" data-csrf="<%= locals.csrfToken%>" data-productid="<%= product.id%>">Delete</button>
            <% } else { %>
                <a class="btn btn-alt" href="/products/<%= product.id %>">View Details</a>
            <% } %>
        </div>

    </div>
    
</article>